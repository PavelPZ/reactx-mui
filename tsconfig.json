{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "outDir": "lib-native",

    "baseUrl": ".",
    "paths": {
      "reactx-mui/current/*": [ "src/web/*" ],
      "reactx-mui/native/*": [ "src/native/*" ],
      "reactx-mui/web/*": [ "src/web/*" ],
      "reactx-mui/test/*": [ "src/test/*" ],
      "reactx-mui/common/*": [ "src/common/*" ],
      "test/*": [ "src/test/*" ]
    },

    //"importHelpers": true, https://github.com/facebook/react-native/issues/16858
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [ "./src/**/*" ],
  "exclude": [
    "jspm_packages",
    "node_modules",
    "build-native",
    "build-web"
  ]
}
